        "authentication": "genericCredentialType",
        "genericAuthType": "httpHeaderAuth",
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={\n  \"message\": \"[NWF-07] Quality check result\",\n  \"content\": \"{{ Buffer.from(JSON.stringify($json, null, 2)).toString('base64') }}\"\n}",
        "options": {}
      },
      "id": "write-review",
      "name": "Write plan_review.json",
