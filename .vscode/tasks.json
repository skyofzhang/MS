{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch Task Trigger",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}/.task/watch_trigger.ps1"
      ],
      "isBackground": true,
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated"
      }
    },
    {
      "label": "Execute Current Task",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}/.task/execute_task.ps1"
      ],
      "problemMatcher": []
    }
  ]
}
